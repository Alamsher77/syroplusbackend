<div class="p-6 bg-purple-50 min-h-screen">
  <h1 class="text-3xl font-bold text-purple-800 mb-6">Dashboard Overview</h1>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    
    <!-- Total Users -->
    <div class="bg-purple-100 p-5 rounded-2xl shadow-md border border-purple-300">
      <h2 class="text-sm text-purple-700">Total Users</h2>
      <p class="text-2xl font-bold text-purple-900"><%= totalusers.length %></p>
    </div>

    <!-- Total Recharge -->
    <div class="bg-purple-200 p-5 rounded-2xl shadow-md border border-purple-300">
      <h2 class="text-sm text-purple-800">Total Recharge</h2>
      <p class="text-2xl font-bold text-purple-950">₹<%= totalrecharge %></p>
    </div>

    <!-- Total Withdrawal -->
    <div class="bg-purple-300 p-5 rounded-2xl shadow-md border border-purple-400">
      <h2 class="text-sm text-purple-900">Total Withdrawal</h2>
      <p class="text-2xl font-bold text-white">₹89,200</p>
    </div>

    <!-- Installed Apps -->
    <div class="bg-purple-400 p-5 rounded-2xl shadow-md border border-purple-500">
      <h2 class="text-sm text-white">Installed Apps</h2>
      <p class="text-2xl font-bold text-white">3,140</p>
    </div>
  </div>

  <!-- Additional Data Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-10">
    
    <!-- Recent Activities -->
    <div class="bg-purple-100 p-6 rounded-2xl shadow-md border border-purple-300">
      <h3 class="text-lg font-semibold text-purple-800 mb-4">Recent Activities</h3>
      <ul class="text-sm text-purple-700 space-y-2">
        <li>+ ₹500 recharge by User #1234</li>
        <li>- ₹200 withdrawal by User #7865</li>
        <li>New app installed by User #5643</li>
      </ul>
    </div>

    <!-- Statistics Summary -->
    <div class="bg-purple-200 p-6 rounded-2xl shadow-md border border-purple-300">
      <h3 class="text-lg font-semibold text-purple-900 mb-4">Monthly Summary</h3>
      <p class="text-purple-800">Recharges up by 18% this month</p>
      <p class="text-purple-800">Withdrawals stable</p>
    </div>
  </div>
</div>