<div class="bg-purple-50 text-gray-800 max-w-[100vh] overflow-scroll">
  <div class="max-w-6xl mx-auto py-10">
    <h1 class="text-3xl font-bold text-purple-700 mb-8">User Management</h1>

    <table class="min-w-full bg-white shadow-md  overflow-hidden">
      <thead class="bg-purple-600 text-white">
        <tr>
          <th class="py-1 px-3 text-center">#</th>
          <th class="py-1 px-3 text-center">Name</th>
          <th class="py-1 px-3 text-center">Email</th>
          <th class="py-1 px-3 text-center">Role</th>
          <th class="py-1 px-3 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr class="border-b  hover:bg-purple-100">
            <td class="py-1  text-center px-3"><%= index + 1 %></td>
            <td class="py-1 text-center px-3"><%= user.name %></td>
            <td class="py-1 text-center px-3"><%= user.email %></td>
            <td class="py-1 text-center px-3">
              <span class="inline-block px-3 py-1 rounded-full bg-purple-200 text-purple-800 text-sm font-medium">
                <%= user.role %>
              </span>
            </td>
            <td class="py-1 items-center justify-center flex px-3">
              <button class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-1 rounded-md text-sm mr-2">Edit</button>
              <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-1 rounded-md text-sm">Delete</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

  